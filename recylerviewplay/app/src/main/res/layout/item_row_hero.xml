<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewPhotoUI"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/sukarno"
        android:layout_width="55dp"
        android:layout_height="55dp"/>

    <TextView
        android:id="@+id/tvHeroNameUI"
        android:text="@string/heroes_name"
        android:layout_marginStart="12dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        app:layout_constraintStart_toEndOf="@id/imageViewPhotoUI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageViewPhotoUI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDetailHeroUI"
        android:text="@string/detail"
        app:layout_constraintTop_toBottomOf="@id/tvHeroNameUI"
        app:layout_constraintStart_toEndOf="@id/imageViewPhotoUI"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="2"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>